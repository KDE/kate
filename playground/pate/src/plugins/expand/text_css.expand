class BadFormatError(Exception):
    pass

def heading(s):
    try:
        text, number = s.rsplit(',', 1)
        number = number.strip()
        int(number)
    except ValueError:
        raise BadFormatError('Usage: heading(text, cols), i.e. heading(Footer Stuff, 80)')
    return '/*%s*/' % (' %s ' % text).center(int(number) - 4, '*')

